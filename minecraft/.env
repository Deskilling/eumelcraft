# Volumes
# From /
MINECRAFT_DATA=./data
BACKUP_DATA=./backups

# LOOK AT THE docker-compose.yaml Ports

# Main Settings
VERSION=LATEST
SERVER_TYPE=PAPER
MEMORY=6500M

TIME_ZONE=Europe/Berlin

# Modrinth Plugins
MODRINTH_ALLOWED_VERSION_TYPE=alpha
MODRINTH_PROJECTS=teaks-tweaks

# Server Properties
SERVER_NAME=Eumelcraft
GAMEMODE=survival
DIFFICULTY=hard
OPS=Leeeiif
WHITELIST=Leeeiif
MAX_PLAYERS=56

# Keep the §b§d§f§d§b to protect youself from https://github.com/Funtimes909/ServerSeekerV2
MOTD=Minecraft Server §b§d§f§d§b
VIEW_DISTANCE=12
SIMULATION_DISTANCE=8

SYNC_CHUNK_WRITES=false
SPAWN_PROTECTION=0

# To disable chat reporting
ENFORCE_SECURE_PROFILE=false
MAX_TICK_TIME=-1
JVM_DD_OPTS=disable.watchdog:true

# Autopause Settings
ENABLE_AUTOPAUSE=false
AUTOPAUSE_TIMEOUT_EST:15
AUTOPAUSE_TIMEOUT_INIT:15

# Rcon Settings
ENABLE_RCON=true
RCON_PASSWORD=DEFAULT # Also Used in the Backup
RCON_PORT=25575

# Backup Settings
BACKUP_NAME=BACKUP
BACKUP_INTERVAL=24h
PRUNE_BACKUPS_DAYS=7
INITIAL_DELAY=5m

BACKUP_METHOD=tar
